{
  "name": "voice-to-llm-desktop-assistant",
  "version": "1.0.0",
  "description": "A desktop assistant that transcribes voice to text and processes it with LLM",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "voice",
    "llm",
    "assistant",
    "whisper",
    "openai"
  ],
  "author": "Voice-to-LLM Assistant",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "node-global-key-listener": "^0.3.0",
    "node-record-lpcm16": "^1.0.1",
    "node-wav": "^0.0.2",
    "openai": "^4.20.1"
  },
  "build": {
    "appId": "com.voicetollm.assistant",
    "productName": "Voice-to-LLM Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
